# Simpulse Configuration
# Copy this file to .env and customize as needed

# Core Lean 4 executables
LEAN_PATH=lean
LAKE_PATH=lake

# Directories (relative to project root)
SIMPULSE_CACHE=./cache
SIMPULSE_LOG_DIR=./logs

# Logging
LOG_LEVEL=INFO

# Timeouts (seconds)
LEAN_TIMEOUT=300
BUILD_TIMEOUT=600

# Performance settings
SIMPULSE_JOBS=4
BENCHMARK_RUNS=3

# Development
SIMPULSE_DEBUG=false

# Testing (optional)
TEST_PROJECT_PATH=./lean4/integration_test